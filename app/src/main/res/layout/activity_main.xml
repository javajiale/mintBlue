<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg"
   >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query_button"
        android:src="@mipmap/search_128px"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" search"
        android:id="@+id/text"
        android:layout_below="@+id/query_button"
        android:layout_alignLeft="@+id/query_button"
        android:layout_alignStart="@+id/query_button"
        android:layout_alignRight="@+id/query_button"
        android:layout_alignEnd="@+id/query_button"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translate_button"
        android:src="@mipmap/translate"
        android:layout_toRightOf="@+id/query_button"
        android:layout_toEndOf="@+id/query_button"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_alignTop="@+id/query_button"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="translate"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/text"
        android:layout_alignLeft="@+id/translate_button"
        android:layout_alignStart="@+id/translate_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_button"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="51dp"
        android:src="@mipmap/news"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="   news"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:layout_below="@+id/news_button"
        android:layout_alignLeft="@+id/news_button"
        android:layout_alignStart="@+id/news_button"
        android:layout_alignRight="@+id/news_button"
        android:layout_alignEnd="@+id/news_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itSearch_button"
        android:layout_alignTop="@+id/news_button"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:src="@mipmap/internet"
        android:layout_alignRight="@+id/translate_button"
        android:layout_alignEnd="@+id/translate_button"
        android:layout_above="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="   recite"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:layout_below="@+id/itSearch_button"
        android:layout_alignLeft="@+id/itSearch_button"
        android:layout_alignStart="@+id/itSearch_button"
        android:layout_alignRight="@+id/itSearch_button"
        android:layout_alignEnd="@+id/itSearch_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mintBlue_button"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="67dp"
        android:src="@mipmap/danci"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="mintBlue"
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:layout_below="@+id/mintBlue_button"
        android:layout_alignLeft="@+id/mintBlue_button"
        android:layout_alignStart="@+id/mintBlue_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/collect_button"
        android:layout_alignTop="@+id/mintBlue_button"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:src="@mipmap/collect"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  collect"
        android:id="@+id/textView6"
        android:layout_gravity="center"
        android:layout_below="@+id/collect_button"
        android:layout_alignLeft="@+id/collect_button"
        android:layout_alignStart="@+id/collect_button"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

</RelativeLayout>
